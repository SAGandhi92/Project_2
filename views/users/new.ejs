<form action="/users" method="post">
  <input type="email"
         name="user[email]"
         placeholder="email address">
  <input type="password"
         name="user[password]"
         placeholder="password">
  <input type="password"
         name="user[passwordConfirmation]"
         placeholder="confirm password">
  <input type="submit"
         value="Sign up!">
</form>
