<div class="container">
  <div id="login">
       <form action="/users" method="post">
        <label>Username</label></br>
        <input type="text"
               name="user[username]"
        placeholder="Enter your username"></br>
        <label>Email</label></br>
        <input type="text"
               name="user[email]"
        placeholder="Enter your email"></br>
        <label>Password</label></br>
        <input type="text"
               name="user[password]"
        placeholder="Enter your password">
        <input type="submit"
              value="Sign Up">
      </form>
  </div>
</div>
